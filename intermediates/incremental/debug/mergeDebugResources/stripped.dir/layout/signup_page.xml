<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="60dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logo_loginpage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/app_name"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_light"
            android:text="@string/app_subheading" />

        <EditText
            android:id="@+id/createAccountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/inter_regular"
            android:hint="@string/name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/createAccountEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/inter_regular"
            android:hint="@string/email"
            android:inputType="text|textEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/createAccountPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/inter_regular"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="text|textPassword"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/createAccountRewritePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/inter_regular"
            android:hint="@string/rewrite_password"
            android:inputType="text|textPassword"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="VisualLintTextFieldSize" />

        <Button
            android:id="@+id/createAccountBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/inter_semibold"
            android:padding="5dp"
            android:text="@string/create_account_text"
            android:textColor="@color/background"
            app:cornerRadius="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/have_account"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/loginLinkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/login_text"
                android:textColor="@color/primary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>